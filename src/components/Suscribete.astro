<script>
    // Seleccionar los elementos que queremos animar
const elementosIzquierda = document.querySelectorAll('.aparecer-lado');
const elementosDerecha = document.querySelectorAll('.aparecer-lado-derecha');

// Definir el observer
const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('visible'); // AÃ±adir la clase visible cuando entra en el viewport
    }
  });
});

// Observar cada uno de los elementos
elementosIzquierda.forEach((el) => observer.observe(el));
elementosDerecha.forEach((el) => observer.observe(el));

</script>

